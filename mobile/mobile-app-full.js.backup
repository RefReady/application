    if (!mentorList) return;
    
    const mentors = [
      { name: 'Sarah Mitchell', role: 'Senior Mentor', status: 'online', avatar: 'üë©‚Äçüè´' },
      { name: 'David Chen', role: 'Performance Coach', status: 'online', avatar: 'üë®‚Äçüíº' },
      { name: 'Lisa Anderson', role: 'Regional Supervisor', status: 'offline', avatar: 'üë©‚Äçüíª' }
